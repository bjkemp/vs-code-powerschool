{
  "name": "vs-code-powerschool",
  "displayName": "VS Code - PowerSchool",
  "description": "Syntax highlighting for the TLIST_SQL tag",
  "version": "0.0.1",
  "publisher": "BenjaminKemp",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": ["Programming Languages"],
  "icon": "images/icon.png",
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tlist_sql",
        "extensions": [".tlist_sql"],
        "aliases": ["TLIST_SQL"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "json",
        "extensions": [".json"],
        "aliases": ["JSON"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "html",
        "extensions": [".html", ".htm"],
        "aliases": ["HTML"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "javascript",
        "extensions": [".js"],
        "aliases": ["JavaScript"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "tlist_sql.injection",
        "injectTo": ["text.html.basic","text.html.derivative","source.js","source.json","text"],
        "path": "./syntaxes/tlist_sql.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "tlist_sql",
        "path": "./snippets/tlist_sql.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "~16.18.16",
    "@types/semver": "^7.3.13",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "bugs": {
    "url": "https://github.com/bjkemp/vs-code-powerschool/issues",
    "email": "bjkemp@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bjkemp/vs-code-powerschool.git"
  },
  "homepage": "https://github.com/bjkemp/vs-code-powerschool/blob/main/README.md"
}
